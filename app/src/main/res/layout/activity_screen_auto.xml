<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_no_margin"
    android:paddingRight="@dimen/activity_no_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="com.drake.howtu.howtu.ScreenAuto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/car"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/auto"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Change a Tire" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Change Wiper Blade" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Change a Fuse" />

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Replace Spark Plug" />

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Check Your Fluids" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Change Your Headlights" />

            <Button
                android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Change Your Air Filter" />

            <Button
                android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Flush a Radiator" />

            <Button
                android:id="@+id/button9"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Change Your Brake Pads" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
