<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    android:background="#ffffff"
    tools:context="com.drake.howtu.howtu.ScreenDIY">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/handy"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/diy"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Fix a Leaky Faucet"
                android:onClick="button1"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Unclog a Shower Drain"
                android:onClick="button2"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Remove U Trap Under Sink"
                android:onClick="button3"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Test Your Water Pressure"
                android:onClick="button4"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Replace Damaged Shingles"
                android:onClick="button5"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Caulk Windows"
                android:onClick="button6"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Paint a Room"
                android:onClick="button7"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Drain a Water Heater"
                android:onClick="button8"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:background="@drawable/style_button1"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Replace a Door Knob"
                android:onClick="button9"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>